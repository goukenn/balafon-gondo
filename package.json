{
  "name": "balafon-gondo",
  "displayName": "BALAFON GONDO",
  "description": "BALAFON framework language support features",
  "publisher": "igkdev",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.86.0"
  },
  "author": {
    "name": "C.A.D. BONDJE DOUE",
    "email": "cbondje@igkdev.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/goukenn/balafon-gondo"
  },
  "main":"./lib/extension",
  "icon":"main_logo@3x.png",
  "keywords":[
    "balafon",
    "bview"
  ],
  "categories": [
    "Programming Languages",
    "Other",
    "Snippets",
    "Testing", "Themes" , "Formatters"
  ],
  "activationEvents": [ 
  ],
  "contributes": {
    "languages": [{
      "id": "bview",
      "aliases": ["BALAFON bview", "bview"],
      "extensions": [".bview"],
      "configuration": "./language-configuration.json"
    },
    {
      "id": "bcss",
      "aliases": ["BALAFON bcss", "bcss"],
      "extensions": [".bcss"],
      "configuration": "./bview.language-configuration.json",
      "icon": {
        "dark": "./assets/icons/bcss-icon-dark.png",
        "light": "./assets/icons/bcss-icon-dark.png"
      }
    }],
    "grammars": [{
      "language": "bview",
      "scopeName": "source.bview",
      "path":"./syntaxes/bview.tmLanguage.json"
    },
    {
      "language": "bcss",
      "scopeName": "source.bcss",
      "path":"./syntaxes/bcss.tmLanguage.json"
    }
    ]
  },

  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
